{% extends "base.html.twig" %}

{% block title %}Employee Form{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-md-12">

                <form class="border">

                    <div class="container">
                        <div class="form-group row justify-content-center border">
                            <div class="col-md-8 text-center">
                                <h2>Employees</h2>
                            </div>
                        </div>

                        <div class="form-group row justify-content-center border">
                            <div class="col-lg-8 input-fields">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <label for="inputFirstName" class="col-form-label float-lg-right">First name:</label>
                                        </div>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" id="inputFirstName">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <div class="col-lg-8 input-fields">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <label for="inputLastName" class="col-form-label float-lg-right">Last name:</label>
                                        </div>
                                        <div class="col-lg-9">
                                            <input type="text" class="form-control" id="inputLastName">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <div class="col-lg-8 input-fields">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <label for="inputDOB" class="col-form-label float-lg-right">Date of birth:</label>
                                        </div>
                                        <div class="col-lg-9 ">
                                            <input type="text" class="form-control" id="inputDOB" placeholder="DD/MM/YY">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <div class="col-lg-8 input-fields">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <label for="inputEmail" class="col-form-label float-lg-right">Email address:</label>
                                        </div>
                                        <div class="col-lg-9 ">
                                            <input type="email" class="form-control" id="inputEmail">
                                         </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <div class="col-lg-8 input-fields">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-9 offset-lg-3">
                                            <button type="submit" class="btn btn-primary">Submit</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        
    </div>
{% endblock %}